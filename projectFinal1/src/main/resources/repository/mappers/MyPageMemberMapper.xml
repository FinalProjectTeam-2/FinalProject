<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	
	<mapper namespace="com.finalproject.festival.mapper.MyPageMemberMapper">
	
		<select id="MyInfo" resultType="Member" >
			SELECT * FROM Member WHERE id = #{id}
		</select>
	
	
		<select id="MyCoupon" resultType="MemberCoupon">
			SELECT * FROM MemberCoupon WHERE id = #{id}
		</select>
	
		<select id="Coupon" resultType="Coupon">
			SELECT c.couponname, c.couponno, c.coupondiscountrate FROM Coupon c JOIN MemberCoupon mc ON c.couponno = mc.couponno
            WHERE mc.id = #{id}
		</select>
		
		<select id = "Question" resultType="Question">
			SELECT * FROM Question WHERE id = #{id}
		</select>
	
		<update id="MyGrade" parameterType="HashMap">
			UPDATE Member
			SET grade = #{grade}
			WHERE id = #{id};
		</update>
		
		<select id="GalleryBookMark" resultType="GalleryBookMark">
			SELECT *
			FROM  GalleryBookmark
			WHERE id = #{id};
		</select>
		
		<select id="GalleryInfo" resultType="Gallery" parameterType="int">
			SELECT *
			FROM Gallery
			WHERE galleryno = #{galleryno}
		</select>
		
		<select id="Bookmark" resultType="Bookmark">
			SELECT * 
			FROM Bookmark
			WHERE id = #{id}
		</select>
		
		<select id="Product" resultType="Product">
			SELECT *
			FROM Product
			WHERE productno = #{productno}
		</select>
		
		<select id="Reservation" resultType="Reservation">
			SELECT *
			FROM Reservation
			WHERE id = #{id}
		</select>
		
		<select id="ReProduct" resultType="Product">
			SELECT *
			FROM Product
			WHERE productno = #{productno}
		</select>
		
		<delete id="MyReservation" parameterType="HashMap">
			DELETE
			FROM Reservation
			WHERE productno = #{productno} AND id = #{id}
		</delete>
		
		<update id="MyCancleTicket">
			UPDATE Product
			SET productticketcount
			WHERE productno = #{productno}
		</update>
		
	</mapper>